{% extends 'base.jinja2' %}

{% block subtitle %}Add Donation{% endblock subtitle %}

{% block content %}
<form method="POST">
    {% if error %}<p>{{ error }}</p>{% endif %}
    <label for="donor">Donor: </label><input id="donor" type="text" name="donor"><br>
    <label for="donation-amount">Donation amount: </label><input id="donation-amount" type="number" name="donation-amount"><br>
    <input type="submit" value="Add Donation">
</form>
{% endblock content %}
